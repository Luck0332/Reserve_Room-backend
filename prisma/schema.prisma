generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reserve_room {
  id         Int       @id @default(autoincrement())
  user_id    Int
  room_id    Int
  check_in   DateTime  @db.Date
  check_out  DateTime  @db.Date
  status     String?   @default("reserved") @db.VarChar(20)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  rooms      rooms     @relation(fields: [room_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model rooms {
  id           Int            @id @default(autoincrement())
  room_number  String         @unique @db.VarChar(10)
  room_type    String         @db.VarChar(50)
  price        Decimal        @db.Decimal(10, 2)
  is_available Boolean?       @default(true)
  created_at   DateTime?      @default(now()) @db.Timestamp(6)
  reserve_room reserve_room[]
}

model users {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(100)
  email        String         @unique @db.VarChar(100)
  phone        String?        @db.VarChar(20)
  created_at   DateTime?      @default(now()) @db.Timestamp(6)
  password     String         @default("") @db.VarChar(255)
  reserve_room reserve_room[]
}
